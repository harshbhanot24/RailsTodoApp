<div class='container'>
<div class='row text-center'>
<div class='col'>
<% def setClass(p)
    
    if p==1
    return 'text-white bg-danger'   
    elsif p==2
        return 'text-white  bg-info'
    else
        return 'bg-light'
    end
end
%>
<div class="card  mt-3 "  >
<div class="card-header <%=setClass(@todo.priority)%>">
    <h5 class="card-title"><%=  @todo.title%></h5>
  </div>
  <div class="card-body">
    
    <p class="card-text"><%=  @todo.description%></p>
    <div class="card-footer">
    <div class="row">
      <div class='col'>Status:<%=@todo.status%></div>
      <div class='col'>Group:<%=@todo.group%></div>
      <div class='col'>Priority:<%=@todo.priority%></div>
      <div class='col'>Completion date:<%=@todo.Completion_Date%></div>
      </div>
       <%=link_to todos_path do%>
<span>Back </span>
<i class="fa fa-undo"></i>
<%end%>
   <%if @todo.status!='completed' || @todo.status!='archieved'%>|
   <%=link_to edit_todo_path(@todo) do%>
   <span>edit</span>
   <i class ='fa fa-edit'></i>
   <%end%>
<%end%>
    </div>
</div>
  </div>
  </div>
</div>