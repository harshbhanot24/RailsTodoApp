<h1>Here is the list of all articles here
</h1>
<h3>
<%= link_to "Create new Todo item" , new_todo_path%>
</h3>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>status</th>
        <th>group</th>
        <th>priority</th>
    </tr>
<% @todos.each do |todo|%>
    <tr>
        <td><%=todo.title%></td>
        <td><%=todo.description%></td>
        <td><%=todo.status%></td>
        <td><%=todo.group%></td>
        <td><%=todo.priority%></td>
        <td><%=link_to "edit", edit_todo_path(todo)%></td>
         <td><%=link_to "show", todo_path(todo)%></td>
    </tr>
<%end%>

</table>