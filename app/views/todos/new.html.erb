<h1>Create a new Todo</h1>
<ul>
<% if @todo.errors.any?%>
<h4>folllowing problems need to be resolved</h4>
<% @todo.errors.full_messages.each do |msg|%>
<li><%=msg%></li>
<%end%>
<%end%>
<%= form_for @todo do |f| %>
<%= f.label :title %><br/>  
  <%= f.text_field :title %></br>
  <%= f.label :description %><br/> 
  <%= f.text_area :description, size: "60x12" %>
</br>
 <%= f.label :status %>&nbsp;
<%= f.text_field :status %></br>
  </br>
</br>
<%= f.label :group %>
<%= f.text_field :group%></br>
<%= f.label :priority %><br/>  
 <%= f.text_field :priority %></br>
 </br>
</br>

  <%= f.submit %> 
<% end %>